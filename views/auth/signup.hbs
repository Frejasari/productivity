<div class="card-body opacity-95 auth-container">
  <h1 class="mb-4">{{title}}</h1>
  <div class="signup-container">
    <h2>Signup</h2>
    <form action="/auth/signup" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" class="form-control" type="text" name="username">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" class="form-control" type="text" name="email">
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
        {{#if message }}
          <div class="error-message">{{ message }}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-outline-secondary">Create account</button>
        <br>
        <small class="account-message">
          Do you already have an account?
          <a href="/">Login</a>
        </small>
      </div>
    </form>
  </div>
</div>

